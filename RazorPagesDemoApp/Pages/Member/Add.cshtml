@page
@model QuanLyBongDa.Pages.Member.AddModel
@{
    var message = ViewData["Message"]?.ToString();
}
<form method="post">
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">@message</div>
    }
    <h1 class="mb-3">Add A New Member</h1>

    <div class="mb-3">
        <label class="form-label">Ten Cau Thu</label>
        <input type="text" class="form-control" asp-for="AddMemberRequest.TenCauThu" />
    </div>

    <div class="mb-3">
        <label class="form-label">So Ao</label>
        <input type="number" class="form-control" asp-for="AddMemberRequest.SoAo" />
    </div>
    <div class="mb-3">
        <label class="form-label">Vi Tri</label>
        <input type="text" class="form-control" asp-for="AddMemberRequest.ViTri" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>